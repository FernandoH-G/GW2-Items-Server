# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  getItemByID(id: String!): Item!
}

type Price {
  gold: String!
  silver: String!
  copper: String!
}

type Item {
  id: ID!
  name: String!
  imgURL: String!
  sell: Price!
  buy: Price!
  description: String
  type: String!
  rarity: String!
  level: String!
}